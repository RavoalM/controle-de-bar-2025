@model VisualizarProdutosViewModel

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Produtos";
}

<p>
    <a class="btn btn-cobre px-4 rounded-pill shadow-sm" href="/produtos/cadastrar">
        <i class="bi bi-plus me-2"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr class="border border-light opacity-25" />

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    @foreach (var item in Model.Registros)
    {
        <div class="col">
            <div class="card mesa-card-dark text-light h-100 border-0">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title text-warning">
                            Produto: @item.Nome
                        </h5>
                        <p class="card-text">
                            <span class="fw-semibold">Valor:</span> @item.Valor.ToString("C2")
                        </p>
                    </div>
                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a href="/produtos/editar/@item.Id" class="btn btn-outline-warning rounded-circle opcao-card-dark" title="Editar">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/produtos/excluir/@item.Id" class="btn btn-outline-danger rounded-circle opcao-card-dark" title="Excluir">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
